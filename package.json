{
    "name": "mtrancode",
    "displayName": "MTranCode",
    "description": "Translate comments, strings, code hints locally.",
    "version": "3.0.3",
    "publisher": "xxnuo",
    "contributors": [
        {
            "name": "xxnuo"
        }
    ],
    "author": {
        "name": "Zheng MaoWei",
        "email": "intellsmi@gmail.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/xxnuo/MTranCode/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/xxnuo/MTranCode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xxnuo/MTranCode.git"
    },
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "AI",
        "Chat",
        "Other"
    ],
    "keywords": [
        "comment",
        "translate",
        "hover",
        "google translate",
        "GitHub Copilot Chat Participant",
        "翻译",
        "注释",
        "翻訳"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "icon": "icon.png",
    "main": "./dist/extension",
    "contributes": {
        "chatParticipants": [
            {
                "id": "intellism.translate",
                "fullName": "MTranCode",
                "name": "translate",
                "description": "%mtrancode.chat.description%",
                "isSticky": true,
                "commands": [
                    {
                        "name": "word",
                        "description": "%mtrancode.chat.command.word%"
                    },
                    {
                        "name": "var",
                        "description": "%mtrancode.chat.command.var%"
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "mtrancode.select",
                "title": "%mtrancode.command.select%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.translateForCopilotChat",
                "title": "%mtrancode.command.translateForCopilotChat%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.nameVariable",
                "title": "%mtrancode.command.nameVariable%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.selectAllText",
                "title": "%mtrancode.command.selectAllText%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.selectAllComment",
                "title": "%mtrancode.command.selectAllComment%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.translateAllText",
                "title": "%mtrancode.command.translateAllText%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.translateAllComment",
                "title": "%mtrancode.command.translateAllComment%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.clipboard",
                "title": "%mtrancode.command.clipboard%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.changeTranslateSource",
                "title": "%mtrancode.command.changeTranslateSource%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.changeTargetLanguage",
                "title": "%mtrancode.command.changeTargetLanguage%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.toggleBrowseMode",
                "title": "%mtrancode.command.toggleBrowseMode%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.toggleDocumentBrowseMode",
                "title": "%mtrancode.command.toggleDocumentBrowseMode%",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.openDocumentBrowseMode",
                "title": "%mtrancode.command.openDocumentBrowseMode%",
                "icon": "$(eye-closed)",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.closeDocumentBrowseMode",
                "title": "%mtrancode.command.closeDocumentBrowseMode%",
                "icon": "$(eye)",
                "category": "MTranCode"
            },
            {
                "command": "mtrancode.replaceSelections",
                "title": "%mtrancode.command.replaceSelections%",
                "category": "MTranCode"
            }
        ],
        "keybindings": [
            {
                "command": "mtrancode.select",
                "key": "alt+shift+s",
                "mac": "ctrl+shift+s"
            },
            {
                "command": "mtrancode.nameVariable",
                "key": "alt+shift+n",
                "mac": "ctrl+shift+n",
                "when": "resourceLangId in mtrancode.canLanguages"
            },
            {
                "command": "mtrancode.translateForCopilotChat",
                "key": "alt+shift+y",
                "mac": "ctrl+shift+y",
                "when": "github.copilot.activated"
            },
            {
                "command": "mtrancode.replaceSelections",
                "when": "editorHasSelection",
                "mac": "ctrl+shift+t",
                "key": "alt+shift+t"
            },
            {
                "command": "mtrancode.toggleDocumentBrowseMode",
                "key": "alt+shift+z",
                "mac": "ctrl+shift+z"
            },
            {
                "command": "mtrancode.toggleBrowseMode",
                "key": "alt+shift+b",
                "mac": "ctrl+shift+b"
            }
        ],
        "submenus": [
            {
                "id": "mtrancode",
                "label": "MTranCode"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "mtrancode.openDocumentBrowseMode",
                    "when": "false"
                },
                {
                    "command": "mtrancode.closeDocumentBrowseMode",
                    "when": "false"
                },
                {
                    "command": "mtrancode.translateForCopilotChat",
                    "when": "github.copilot.activated"
                }
            ],
            "editor/title": [
                {
                    "command": "mtrancode.openDocumentBrowseMode",
                    "when": "!mtrancode.ultimatelyBrowseEnable && config.mtrancode.hover.enabled && resourceLangId in mtrancode.canLanguages",
                    "group": "navigation"
                },
                {
                    "command": "mtrancode.closeDocumentBrowseMode",
                    "when": "mtrancode.ultimatelyBrowseEnable && config.mtrancode.hover.enabled && resourceLangId in mtrancode.canLanguages",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "submenu": "mtrancode",
                    "group": "1_translate@0"
                }
            ],
            "mtrancode": [
                {
                    "command": "mtrancode.replaceSelections",
                    "group": "1_translate@1"
                },
                {
                    "command": "mtrancode.nameVariable",
                    "when": "resourceLangId in mtrancode.canLanguages",
                    "group": "1_translate@2"
                },
                {
                    "command": "mtrancode.translateForCopilotChat",
                    "when": "github.copilot.activated",
                    "group": "1_translate@3"
                },
                {
                    "command": "mtrancode.translateAllText",
                    "when": "resourceLangId in mtrancode.canLanguages",
                    "group": "2_file@1"
                },
                {
                    "command": "mtrancode.translateAllComment",
                    "when": "resourceLangId in mtrancode.canLanguages",
                    "group": "2_file@2"
                },
                {
                    "command": "mtrancode.selectAllText",
                    "when": "resourceLangId in mtrancode.canLanguages",
                    "group": "3_select@1"
                },
                {
                    "command": "mtrancode.selectAllComment",
                    "when": "resourceLangId in mtrancode.canLanguages",
                    "group": "3_select@2"
                }
            ]
        },
