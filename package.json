        "vscode:prepublish": "bun run package",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "package": "bun run test && webpack --mode production --devtool hidden-source-map",
        "test": "jest",
        "test-compile": "tsc -p ./",
        "build": "bunx vsce package"
    },
